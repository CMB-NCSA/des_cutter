#!/usr/bin/env python

import sys
import traceback
import desthumbs

if __name__ == "__main__":
    # Get the command-line arguments
    args = desthumbs.makeDESthumbslib.cmdline()
    # Run the maker
    try:
        desthumbs.makeDESthumbslib.run(args)
    except Exception:
        (type, value, my_traceback) = sys.exc_info()
        string_trace = traceback.format_exception(type, value, my_traceback)
        # write string into log
        for line in string_trace:
            args.sout.write(line)

        # Finally raise
        raise
